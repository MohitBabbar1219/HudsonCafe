<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mydarkappfactory.hudsoncafe.LoginActivity"
    android:background="@color/appBackground">


    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/login_logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/loginBackground"
        android:padding="30dp"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/loginLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="example@example.com"
            android:textColor="@color/textColor"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/animBackground"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="10dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/textColor"
            android:layout_marginTop="20dp"
            android:background="@color/animBackground"
            android:layout_below="@+id/email"
            android:layout_alignStart="@+id/email" />

        <Button
            android:id="@+id/loginButt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:onClick="attemptLogin"
            android:layout_below="@+id/password"
            android:layout_alignStart="@+id/password"
            android:background="@color/logoColor"/>

        <Button
            android:id="@+id/registerButt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Register / Sign up"
            android:onClick="register"
            android:layout_below="@+id/loginButt"
            android:layout_alignStart="@+id/password"
            android:background="@color/logoColor"/>

    </RelativeLayout>
</RelativeLayout>
