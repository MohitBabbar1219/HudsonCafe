<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dishImgCart"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="15dp"
            android:layout_margin="5dp"
            android:src="@drawable/appetizers_bruschetta"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp">


            <TextView
                android:id="@+id/dishNameCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textColor"
                android:layout_marginStart="10dp"
                android:text="Crispy corn and chilli pepper" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="4dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:background="#00749b">


                    <TextView
                        android:id="@+id/dishRatingCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/dishRatingCart"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/rating_star"/>
                </RelativeLayout>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/delete_cart"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/removeDish"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/dishPriceCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹170"
                    android:layout_centerVertical="true"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="Qty: " />

                    <TextView
                        android:id="@+id/dishQtyCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/textColor"
                        android:layout_marginEnd="15dp"
                        android:text="0" />
                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>