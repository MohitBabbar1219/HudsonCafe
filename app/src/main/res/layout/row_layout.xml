<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dishImg"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/image"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="6dp">


            <TextView
                android:id="@+id/dishName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginStart="10dp"
                android:text="Crispy corn and chilli pepper" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:layout_marginStart="10dp"
                android:background="#00749b">


                <TextView
                    android:id="@+id/dishRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:layout_marginStart="5dp"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/dishRating"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/rating_star"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/dishPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹170"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:layout_marginStart="20dp"
                    android:textStyle="italic"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_centerVertical="true">


                    <Button
                        android:id="@+id/minusButt"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="-" />

                    <TextView
                        android:id="@+id/dishQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/minusButt"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="0" />

                    <Button
                        android:id="@+id/plusButt"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="+"
                        android:layout_toEndOf="@+id/qtyText"/>
                </LinearLayout>

            </RelativeLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>