<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.darkappfactory.hudsoncafe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.darkappfactory.hudsoncafe.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.darkappfactory.hudsoncafe.LoginActivity"
            android:noHistory="true" />
        <activity
            android:name="com.darkappfactory.hudsoncafe.RegisterActivity"
            android:noHistory="true" />
        <activity
            android:name="com.darkappfactory.hudsoncafe.MenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.darkappfactory.hudsoncafe.SubmenuActivity" />
        <activity android:name="com.darkappfactory.hudsoncafe.CartActivity" />
        <activity android:name="com.darkappfactory.hudsoncafe.OtpActivity"
            android:noHistory="true"/>
    </application>

</manifest>